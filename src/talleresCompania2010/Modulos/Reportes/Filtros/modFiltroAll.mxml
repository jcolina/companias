<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" 
	height="100%">
	<mx:Script>
		<![CDATA[
			import talleresCompania2010.util.IdiomaApp;
		]]>
	</mx:Script>
	
	<mx:Grid>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%">
				<mx:Label text="{IdiomaApp.getText('mod_filtro_all_taller')}" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:ComboBox id="cbTalleres" name="cbTalleres" width="220" prompt="{IdiomaApp.getText('general_prompt')}"></mx:ComboBox>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:Label text="{IdiomaApp.getText('mod_filtro_all_marca')}" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:ComboBox id="cbMarcas" name="cbMarcas" width="180" prompt="{IdiomaApp.getText('general_prompt')}"></mx:ComboBox>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="100%" height="100%">
				<mx:Label text="{IdiomaApp.getText('mod_filtro_all_local')}" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:ComboBox id="cbLocales" name="cbLocales" width="220" prompt="{IdiomaApp.getText('general_prompt')}"></mx:ComboBox>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:Label text="{IdiomaApp.getText('mod_filtro_all_zona')}" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%">
				<mx:ComboBox id="cbZonas" name="cbZonas" width="180" prompt="{IdiomaApp.getText('general_prompt')}"></mx:ComboBox>
			</mx:GridItem>
		</mx:GridRow>
	</mx:Grid>	
</mx:Module>
